<div class="card">
    <h5 class="card-header text-white bg-primary">@Title</h5>
    <div class="card-body">
        @if (this.switches is null)
        {
            <div class="spinner-border" role="status"></div>
        }
        else
        {
            @foreach (var switchInfo in this.switches)
            {
                <SwitchPanelItem Switch=@switchInfo />
            }
        }
    </div>
</div>

@code {
    [Parameter]
    [EditorRequired]
    public string Title { get; set; }
}
